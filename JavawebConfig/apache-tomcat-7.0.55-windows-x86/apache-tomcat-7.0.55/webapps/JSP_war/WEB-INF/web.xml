<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <!-- servlet的配置 -->
  <servlet>
    <!-- 配置servlet名称，需要符合java的标识符命名规范 （自定义）-->
    <servlet-name>servletDemo01</servlet-name>
    <!-- 配置servlet处理类，需要类的全称-->
    <servlet-class>com.inspur.ch9.ServletDemo01</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>servletDemoPage</servlet-name>
    <servlet-class>com.inspur.ch9.ServletDemoPage</servlet-class>
  </servlet>
  <!-- 登陆界面的servlet -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.inspur.ch9.Login</servlet-class>
  </servlet>
   <!-- 登陆校验的servlet -->
  <servlet>
    <servlet-name>loginControl</servlet-name>
    <servlet-class>com.inspur.ch9.LoginControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>servletLifeDemo01</servlet-name>
    <servlet-class>com.inspur.ch9.ServletLifeDemo01</servlet-class>
    <init-param>
     <param-name>username</param-name>
     <param-value>zhangsan</param-value>
    </init-param>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>welcome</servlet-name>
    <servlet-class>com.inspur.ch9.Welcome</servlet-class>
  </servlet>
  

  <!-- servlet 映射的配置 -->
  <servlet-mapping>
     <!--配置servlet名称,需要和上面servlet配置中名称完全一致-->
    <servlet-name>servletDemo01</servlet-name>
    <!--配置请求的字符串模式，两种配置方式。
              第一种的路径匹配：需要前面“/” 支持通配符。比如/*/abc. 请求的url的必须满足/123/abc. /wwww/abc.
              第二种是扩展匹配:不需要“/” 语法格式为：模式字符串（支持通配符）.扩展名。比如*.do.
             那么什么样的请求，可以被该servlet进行处理呢?http://localhost:8080/jspdemopro/abc.do; a.do 123.do
       比如：a*.do。那么只有这样的请求。a123.do abc.do等
    -->
    <url-pattern>/ServletDemo01</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>servletDemoPage</servlet-name>
    <url-pattern>/servletDemoPage</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
   <servlet-name>servletLifeDemo01</servlet-name>
    <url-pattern>/servletLifeDemo01</url-pattern>
  </servlet-mapping>
  
  <!-- login的servlet mapping -->
  <servlet-mapping>
   <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- loginControl的servlet mapping -->
  <servlet-mapping>
   <servlet-name>loginControl</servlet-name>
    <url-pattern>/loginControl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>welcome</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  
  
  
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
  <welcome-file-list>
    <welcome-file>welcome.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
